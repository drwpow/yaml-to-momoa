{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
