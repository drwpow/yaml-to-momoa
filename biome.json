{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["**/dist/**", "**/fixtures/*", "**/package.json"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "useArrowFunction": "off"
      },
      "suspicious": {
        "noConsoleLog": "error",
        "noFallthroughSwitchClause": "error"
      },
      "style": {
        "useBlockStatements": "error"
      }
    }
  }
}
